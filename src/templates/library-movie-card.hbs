{{#each this}}
  <li class='movies-list__item'>
    <div class='poster-thumb'>
      <img
      {{#if placeholder}}
        src='./optimized-png/image-not-found.png'
      {{else}}
        src='https://image.tmdb.org/t/p/original/{{ poster_path }}'
      {{/if}}  
        width="274"
        height="398"
        alt='{{ original_title }}'
        data-id='{{ id }}'
      />
    </div>
    <div class='movie-data'>
      <h2 class='movie-data__title'>{{ original_title }}</h2>
      <p class='movie-data__details'>
        <span>{{ genres }} |</span>
        <span class='movie-data__year'>{{ release_date }}</span>
        <span class='movie-data__rating'>{{ vote_average }}</span>
      </p>
    </div>
  </li>
{{/each}}