{{#each this}}
  <li class='movies-list__item' >
    <div class='poster-thumb'>
      <div class="overlay">
        <button class='button--addLibrary overlay__button--watched'id='{{ id }}' >add to watched</button>
        <button class='button--addLibrary overlay__button--queue' id='{{ id }}' >add to queue</button>
      </div> 
      <img
        {{#if placeholder}}
          src='./optimized-png/image-not-found.png'
        {{else}}
          src='https://image.tmdb.org/t/p/original/{{ poster_path }}'
        {{/if}}
        width="274"
        height="398"
        alt='{{ original_title }}'
        data-id='{{ id }}'
      />  
    </div>
    <div class='movie-data'>
      <h2 class='movie-data__title'>{{ original_title }}</h2>
      <p class='movie-data__details'>
        <span>{{ genre_ids }} |</span>
        <span class='movie-data__year'>{{ release_date }}</span>
      </p>
    </div>
  </li>
{{/each}}