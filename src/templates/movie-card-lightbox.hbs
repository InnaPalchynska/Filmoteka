<div class='lightbox__card' data-id='{{id}}'>
  <button type='button' class='lightbox__close-btn' data-action='close-lightbox'>
    <i class='material-icons-outlined'>close</i>
  </button>

  <div class='lightbox__poster'>
    <img
      class='lightbox__img {{#if placeholder}}placeholder{{/if}}'
      {{#if placeholder}}
      src='./optimized-png/image-not-found.png'
      {{else}}
      src='https://image.tmdb.org/t/p/original/{{poster_path}}'
      {{/if}}
      alt='{{original_title}}'
    />
  </div>

  <div class='lightbox__content'>
    <h2 class='lightbox__title'>{{original_title}}</h2>
    <ul class='film-info'>
      <li class='film-info__item'>
        <h3 class='film-info__param'>Vote / Votes</h3>
        <p class='film-info__votes'>
          <div class='film-info__text film-info__votes--average'>{{vote_average}}</div>
          <span>/</span>
          <div class='film-info__text film-info__votes--count'>{{vote_count}}</div>
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param'>Popularity</h3>
        <p class='film-info__text film-info__popularity'>
          {{popularity}}
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param'>Original Title</h3>
        <p class='film-info__text film-info__orig-title'>
          {{original_title}}
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param'>Genre</h3>
        <p class='film-info__text film-info__genre'>
          {{movie_genres}}
        </p>
      </li>

      {{!-- <li><button class="trailer">show the trailer</button></li> --}}

      <li class='film-info__item'>
        <div class="about-trailer">
          <h3 class='film-info__param film-info__param--about'>About</h3>
          <button class="trailer">
            <div class="align-item__trailer">
              <span>play</span>
              <svg class="trailer-play__icon" version="1.0" xmlns="http://www.w3.org/2000/svg" width="10px" height="20px"
                viewBox="0 0 512.000000 512.000000" preserveAspectRatio="xMidYMid meet">
              
                <g transform="translate(0.000000,512.000000) scale(0.100000,-0.100000)" stroke="none">
                  <path d="M1005 4349 c-581 -46 -860 -221 -954 -601 -44 -177 -46 -231 -46
                          -1103 0 -893 3 -945 55 -1150 119 -463 420 -672 1045 -725 90 -8 573 -10 1565
                          -7 1524 4 1486 3 1705 51 381 83 597 295 685 670 50 216 53 266 57 1036 6 934
                          -7 1132 -88 1340 -108 281 -319 409 -784 477 -97 15 -288 17 -1620 19 -830 1
                          -1559 -2 -1620 -7z m1169 -1050 c46 -13 1085 -550 1134 -586 81 -61 86 -179
                          10 -250 -12 -12 -270 -151 -573 -309 -469 -245 -557 -288 -600 -291 -68 -5
                          -122 26 -152 87 l-23 44 0 579 c0 406 3 591 11 618 14 47 54 86 105 104 48 17
                          41 17 88 4z" />
                </g>
              </svg>
            </div>
          </button>
        </div>
        
        <p class='film-info__text film-info__descr'>
          {{overview}}
        </p>
      </li>
    </ul>

    <div class='lightbox__buttons-overlay'>
      <button class='lightbox__button lightbox__button--watched' id='{{id}}'>add to watched</button>
      <button class='lightbox__button lightbox__button--queue' id='{{id}}'>add to queue</button>
    </div>

</div>