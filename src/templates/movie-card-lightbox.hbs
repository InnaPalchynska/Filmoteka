<div class='lightbox__card' data-id='{{id}}'>
  <button type='button' class='lightbox__close-btn' data-action='close-lightbox'>
    <i class='material-icons-outlined'>close</i>
  </button>

  <div class='lightbox__poster'>
    <img
      class='lightbox__img'
      src='https://image.tmdb.org/t/p/original/{{poster_path}}'
      alt='{{original_title}}'
    />
  </div>

  <div class='lightbox__content'>
    <h2 class='lightbox__title'>{{original_title}}</h2>
    <ul class='film-info'>
      <li class='film-info__item'>
        <h3 class='film-info__param'>Vote / Votes</h3>
        <p class='film-info__votes'>
          <div class='film-info__text film-info__votes--average'>{{vote_average}}</div>
          <span>/</span>
          <div class='film-info__text film-info__votes--count'>{{vote_count}}</div>
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param'>Popularity</h3>
        <p class='film-info__text film-info__popularity'>
          {{popularity}}
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param'>Original Title</h3>
        <p class='film-info__text film-info__orig-title'>
          {{original_title}}
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param'>Genre</h3>
        <p class='film-info__text film-info__genre'>
          {{movie_genres}}
        </p>
      </li>

      <li class='film-info__item'>
        <h3 class='film-info__param film-info__param--about'>About</h3>
        <p class='film-info__text film-info__descr'>
          {{overview}}
        </p>
      </li>
    </ul>

    <div class='lightbox__buttons-overlay'>
      <button class='lightbox__button lightbox__button--watched' id='{{id}}'>add to watched</button>
      <button class='lightbox__button lightbox__button--queue' id='{{id}}'>add to queue</button>
    </div>

</div>